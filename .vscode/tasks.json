{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe build active file",
            "command": "g++",
            "args": [
                "${workspaceFolder}\\src\\include\\glad\\glad.c",
                "${workspaceFolder}\\*.cpp",
                "-o",
                "${workspaceFolder}\\main.exe",
                "-Isrc\\include\\",
                "-Lsrc\\lib",
                "-l:libglfw3.a",
                "-lopengl32",
                "-lgdi32",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}